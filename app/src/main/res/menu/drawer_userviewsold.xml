<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:layout_gravity="start"
    android:background="@color/white"
    android:choiceMode="singleChoice"
    android:divider="@android:color/darker_gray"
    android:paddingTop="?attr/actionBarSize"
    android:dividerHeight="5dp"
    >
    <group android:checkableBehavior="single">

        <item
            android:id="@+id/viewcategory"
            android:title=" Category"
            android:textColor="@color/black"
            android:icon="@drawable/category"
            android:textStyle="bold"
            />

        <item
            android:id="@+id/viewsubcategory"
            android:title="Simple Product"
            android:textColor="@color/black"
            android:icon="@drawable/sucategory"
            android:textStyle="bold"
            />

        <item
        android:id="@+id/viewmystock"
        android:title="Shop Stock "
        android:textColor="@color/black"
        android:icon="@drawable/stocks"
        android:textStyle="bold"
        />

        <item
            android:id="@+id/viewAlart"
            android:title="Alert Product "
            android:textColor="@color/black"
            android:icon="@drawable/alart"
            android:textStyle="bold"
            />

        <item
            android:id="@+id/viewUS"
            android:title="About US "
            android:textColor="@color/black"
            android:icon="@drawable/askquestion"
            android:textStyle="bold"
            />
        <item
            android:id="@+id/Quit"
            android:title="Quit"
            android:textColor="@color/black"
            android:icon="@drawable/closewindow"
            android:textStyle="bold"
            />
    </group>

</menu>